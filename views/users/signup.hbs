<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1 style="font-size: 30px;" class="text-center">Sign Up</h1>
		{{#if hasError}}
			<div class="alert alert-danger" style="font-size: 30px;">
				{{#each messages}}
					{{this}}
				{{/each}}
			</div>
		{{/if}}
		<form action="/user/signup" method="post">
			<div class="form-group">
				<label for="email">Email</label>
				<input type="text" id="email" name="email" class="form-control">
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" id="password" name="password" class="form-control">
			</div>
			<input type="hidden" name="_csrf" value="{{csrfToken}}">
			<div class="g-recaptcha" data-sitekey="6Lc_KxsUAAAAAIMkkgujU5qHdwdOFNgf77MNUe-2"></div><br>
			<input type="submit" name="" value="ĐĂNG NHẬP" class="btn btn-primary text-center" style="width: 49%">
			<a href="/" class="btn btn-danger text-center" style="width: 49%;float: right; color: #fff">VỀ TRANG CHỦ</a>
		</form>
	</div>
	<!--ma hoa -->
</div>
